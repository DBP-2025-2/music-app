<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>로그인 (EJS)</title>
    <style>
        body { font-family: sans-serif; display: grid; place-items: center; min-height: 80vh; }
        form { border: 1px solid #ccc; padding: 20px; border-radius: 8px; }
        div { margin-bottom: 15px; }
        label { display: block; margin-bottom: 5px; font-weight: bold; }
        input { width: 300px; padding: 8px; }
        button { width: 100%; padding: 10px; background-color: #28a745; color: white; border: none; cursor: pointer; }
    </style>
</head>
<body>

    <form id="loginForm">
        <h2>로그인</h2>
        <div>
            <label for="email">이메일:</label>
            <input type="email" id="email" required>
        </div>
        <div>
            <label for="password">비밀번호:</label>
            <input type="password" id="password" required>
        </div>
        <button type="submit">로그인</button>
        <p id="resultMessage" style="color: green;"></p>
    </form>

    <script>
        document.getElementById('loginForm').addEventListener('submit', async function(event) {
            
            event.preventDefault(); 
            
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            const data = {
                email: email,
                password: password
            };

            const resultMsg = document.getElementById('resultMessage');

            try {
                // 이 폼은 'POST /users/login' API를 호출합니다.
                const response = await fetch('/users/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (response.ok) { // 로그인 성공 (200)
                    resultMsg.style.color = 'green';
                    resultMsg.textContent = '✅ 로그인 성공!';
                    

                    // 서버가 발급한 '인증 토큰(JWT)'을 브라우저의 localStorage에 저장합니다.
                    localStorage.setItem('token', result.token);

                    // (1.5초 후에 홈 '/'으로 이동)
                    setTimeout(() => {
                        window.location.href = '/';
                    }, 1500);

                } else { // 로그인 실패 (401)
                    resultMsg.style.color = 'red';
                    resultMsg.textContent = '오류: ' + result.error;
                }

            } catch (error) {
                resultMsg.style.color = 'red';
                resultMsg.textContent = '서버 통신 오류: ' + error.message;
            }
        });
    </script>

</body>
</html>